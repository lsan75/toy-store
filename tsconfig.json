{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false
  },
  "files": [
    "index.ts",
    "./typings/**/*.ts",
    "./www/js/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}